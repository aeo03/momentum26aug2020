<section class = "row justify-content-center">
  <div class = "form-container">
    <%= form_tag auth_user_path do %>
        <div class="form-group">
          <p>
            <%= text_field_tag :username, nil, placeholder: 'Username', class: "form-control" %>
          </p>
        </div>
        
          <p>
            <%= password_field_tag :password, nil, placeholder: 'Password', class: "form-control" %>
          </p>
          <p>
            <%= submit_tag "Login", class: "btn btn-primary btn-block" %>
          </p>

          <p class = "text">
            Forgot Account?
          </p>

          <hr>

          <p class = "btn btn-success btn-block"">
            Create New Account
          </p>

    <% end %>
  </div>
</section>
